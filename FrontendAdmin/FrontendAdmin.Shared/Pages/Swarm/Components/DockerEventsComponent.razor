@using FrontendAdmin.Shared.Pages.Swarm.Models

<div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-4 py-3 border-b border-gray-200 flex justify-between items-center">
        <h3 class="text-lg font-medium text-gray-900">
            <i class="fas fa-stream mr-2"></i>Evenements Docker en temps reel
        </h3>
        <div class="flex items-center gap-4">
            <select @bind="filterType" class="text-sm border-gray-300 rounded-md shadow-sm focus:border-primary-500 focus:ring-primary-500">
                <option value="">Tous les types</option>
                <option value="container">Conteneurs</option>
                <option value="image">Images</option>
                <option value="network">Reseaux</option>
                <option value="volume">Volumes</option>
                <option value="service">Services</option>
            </select>
            <button @onclick="() => OnRefresh.InvokeAsync()" class="text-primary-600 hover:text-primary-800 text-sm">
                <i class="fas fa-sync-alt mr-1"></i>Actualiser
            </button>
        </div>
    </div>

    <div class="overflow-x-auto max-h-[500px] overflow-y-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50 sticky top-0">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Horodatage
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Type
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Action
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Cible
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Details
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (FilteredEvents != null && FilteredEvents.Any())
                {
                    @foreach (var evt in FilteredEvents)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                @evt.Timestamp.ToString("HH:mm:ss")
                                <div class="text-xs text-gray-400">@evt.Timestamp.ToString("dd/MM/yyyy")</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @GetTypeBadgeClass(evt.Type)">
                                    <i class="@GetTypeIcon(evt.Type) mr-1"></i>@evt.Type
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @GetActionBadgeClass(evt.Action)">
                                    @evt.Action
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">@evt.ActorName</div>
                                <div class="text-xs text-gray-500">@TruncateId(evt.ActorId)</div>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-500">
                                @if (evt.Attributes != null && evt.Attributes.Any())
                                {
                                    <button @onclick="() => ToggleDetails(evt.ActorId)" class="text-primary-600 hover:text-primary-800">
                                        <i class="fas @(expandedIds.Contains(evt.ActorId) ? "fa-chevron-up" : "fa-chevron-down")"></i>
                                        @evt.Attributes.Count attributs
                                    </button>
                                    @if (expandedIds.Contains(evt.ActorId))
                                    {
                                        <div class="mt-2 text-xs bg-gray-50 p-2 rounded">
                                            @foreach (var attr in evt.Attributes.Take(10))
                                            {
                                                <div><span class="font-medium">@attr.Key:</span> @TruncateValue(attr.Value)</div>
                                            }
                                        </div>
                                    }
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="px-6 py-4 text-center text-gray-500">
                            Aucun evenement dans les 15 dernieres minutes
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    [Parameter]
    public List<DockerEventDto>? Events { get; set; }

    [Parameter]
    public EventCallback OnRefresh { get; set; }

    private string filterType = "";
    private HashSet<string> expandedIds = new();

    private IEnumerable<DockerEventDto> FilteredEvents =>
        string.IsNullOrEmpty(filterType)
            ? Events ?? Enumerable.Empty<DockerEventDto>()
            : (Events ?? Enumerable.Empty<DockerEventDto>()).Where(e => e.Type.Equals(filterType, StringComparison.OrdinalIgnoreCase));

    private void ToggleDetails(string id)
    {
        if (!expandedIds.Add(id))
        {
            expandedIds.Remove(id);
        }
    }

    private string TruncateId(string id)
    {
        if (string.IsNullOrEmpty(id)) return "unknown";
        return id.Length > 12 ? id[..12] : id;
    }

    private string TruncateValue(string value)
    {
        if (string.IsNullOrEmpty(value)) return "";
        return value.Length > 50 ? value[..47] + "..." : value;
    }

    private string GetTypeBadgeClass(string type)
    {
        return type.ToLower() switch
        {
            "container" => "bg-blue-100 text-blue-800",
            "image" => "bg-purple-100 text-purple-800",
            "network" => "bg-cyan-100 text-cyan-800",
            "volume" => "bg-orange-100 text-orange-800",
            "service" => "bg-green-100 text-green-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }

    private string GetTypeIcon(string type)
    {
        return type.ToLower() switch
        {
            "container" => "fas fa-cube",
            "image" => "fas fa-layer-group",
            "network" => "fas fa-network-wired",
            "volume" => "fas fa-database",
            "service" => "fas fa-cubes",
            _ => "fas fa-question"
        };
    }

    private string GetActionBadgeClass(string action)
    {
        return action.ToLower() switch
        {
            "create" or "start" or "attach" => "bg-green-100 text-green-800",
            "destroy" or "delete" or "kill" or "die" => "bg-red-100 text-red-800",
            "stop" or "pause" or "disconnect" => "bg-yellow-100 text-yellow-800",
            "restart" or "update" => "bg-blue-100 text-blue-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }
}
