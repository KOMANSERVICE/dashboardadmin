@using FrontendAdmin.Shared.Pages.Swarm.Models
@inject ISwarmHttpService SwarmService

<div class="p-4">
    <form @onsubmit="HandleSubmit" @onsubmit:preventDefault>
        <div class="space-y-4">
            <div class="p-3 bg-gray-100 rounded-md">
                <label class="text-xs text-gray-500">Image source</label>
                <p class="text-sm font-medium text-gray-900">@SourceImage</p>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Nouveau repository <span class="text-red-500">*</span>
                </label>
                <input type="text" @bind="newRepository" @bind:event="oninput"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500"
                       placeholder="myregistry.com/myimage" />
                <p class="text-xs text-gray-500 mt-1">
                    Le nom du repository pour le nouveau tag
                </p>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Nouveau tag <span class="text-red-500">*</span>
                </label>
                <input type="text" @bind="newTag" @bind:event="oninput"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500"
                       placeholder="v1.0.0, latest, production" />
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="p-3 bg-red-100 text-red-700 rounded-md text-sm">
                    <i class="fas fa-exclamation-circle mr-2"></i>
                    @errorMessage
                </div>
            }

            @if (tagSuccess)
            {
                <div class="p-3 bg-green-100 text-green-700 rounded-md text-sm">
                    <i class="fas fa-check-circle mr-2"></i>
                    Image taguee avec succes: @newRepository:@newTag
                </div>
            }
        </div>

        <div class="flex justify-end gap-2 mt-6">
            <Button type="button" @onclick="HandleCancel"
                    ButtonColor="ButtonColor.Light"
                    Disabled="@isTagging">
                <span>@(tagSuccess ? "Fermer" : "Annuler")</span>
            </Button>
            @if (!tagSuccess)
            {
                <Button type="submit"
                        ButtonColor="ButtonColor.Primary"
                        Disabled="@(isTagging || string.IsNullOrWhiteSpace(newRepository) || string.IsNullOrWhiteSpace(newTag))">
                    @if (isTagging)
                    {
                        <span class="animate-spin mr-2">
                            <i class="fas fa-spinner"></i>
                        </span>
                    }
                    else
                    {
                        <i class="fas fa-tag mr-2"></i>
                    }
                    <span>Taguer</span>
                </Button>
            }
        </div>
    </form>
</div>

@code {
    [Parameter] public string ImageId { get; set; } = "";
    [Parameter] public string SourceImage { get; set; } = "";
    [Parameter] public EventCallback OnImageTagged { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private string newRepository = "";
    private string newTag = "";
    private bool isTagging;
    private bool tagSuccess;
    private string? errorMessage;

    private async Task HandleSubmit()
    {
        if (string.IsNullOrWhiteSpace(newRepository) || string.IsNullOrWhiteSpace(newTag)) return;

        isTagging = true;
        errorMessage = null;
        tagSuccess = false;
        StateHasChanged();

        try
        {
            var request = new TagImageRequest(
                NewRepository: newRepository.Trim(),
                NewTag: newTag.Trim()
            );

            var response = await SwarmService.TagImageAsync(ImageId, request);
            if (response.Success)
            {
                tagSuccess = true;
                await OnImageTagged.InvokeAsync();
            }
            else
            {
                errorMessage = response.Message ?? "Erreur lors du tag de l'image";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur: {ex.Message}";
        }
        finally
        {
            isTagging = false;
            StateHasChanged();
        }
    }

    private async Task HandleCancel()
    {
        await OnCancel.InvokeAsync();
    }
}
