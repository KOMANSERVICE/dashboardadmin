@using FrontendAdmin.Shared.Pages.Swarm.Models

<div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Service</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Image</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Replicas</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mis a jour</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @if (!Services.Any())
            {
                <tr>
                    <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                        <i class="fas fa-cubes text-4xl mb-2"></i>
                        <p>Aucun service Docker Swarm</p>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var service in Services)
                {
                    <tr class="hover:bg-gray-50 transition">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <i class="fas fa-cube text-primary-700 mr-3"></i>
                                <div>
                                    <div class="text-sm font-medium text-gray-900">@service.Name</div>
                                    <div class="text-sm text-gray-500">@service.Id[..12]</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-gray-900 max-w-xs truncate" title="@service.Image">
                                @GetImageShortName(service.Image)
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="@GetReplicaClass(service)">
                                @service.Replicas / @service.DesiredReplicas
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="@GetStatusBadgeClass(service.Status) px-2 inline-flex text-xs leading-5 font-semibold rounded-full">
                                @service.Status
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @service.UpdatedAt.ToString("dd/MM/yyyy HH:mm")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <div class="flex justify-end gap-2">
                                <button @onclick="() => OnViewDetails.InvokeAsync(service.Name)"
                                        class="text-gray-400 hover:text-primary-700 transition"
                                        title="Details">
                                    <i class="fas fa-info-circle"></i>
                                </button>
                                <button @onclick="() => OnViewLogs.InvokeAsync(service.Name)"
                                        class="text-gray-400 hover:text-primary-700 transition"
                                        title="Logs">
                                    <i class="fas fa-file-alt"></i>
                                </button>
                                <button @onclick="() => OnScale.InvokeAsync(service)"
                                        class="text-gray-400 hover:text-primary-700 transition"
                                        title="Scaler">
                                    <i class="fas fa-expand-arrows-alt"></i>
                                </button>
                                <button @onclick="() => OnResources.InvokeAsync(service.Name)"
                                        class="text-gray-400 hover:text-green-600 transition"
                                        title="Ressources">
                                    <i class="fas fa-microchip"></i>
                                </button>
                                <button @onclick="() => OnRestart.InvokeAsync(service.Name)"
                                        class="text-gray-400 hover:text-yellow-600 transition"
                                        title="Redemarrer">
                                    <i class="fas fa-redo"></i>
                                </button>
                                <button @onclick="() => OnRollback.InvokeAsync(service.Name)"
                                        class="text-gray-400 hover:text-blue-600 transition"
                                        title="Rollback">
                                    <i class="fas fa-undo"></i>
                                </button>
                                <button @onclick="() => OnDelete.InvokeAsync(service.Name)"
                                        class="text-gray-400 hover:text-red-600 transition"
                                        title="Supprimer">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@code {
    [Parameter] public List<SwarmServiceDto> Services { get; set; } = new();
    [Parameter] public EventCallback OnRefresh { get; set; }
    [Parameter] public EventCallback<string> OnViewDetails { get; set; }
    [Parameter] public EventCallback<string> OnViewLogs { get; set; }
    [Parameter] public EventCallback<SwarmServiceDto> OnScale { get; set; }
    [Parameter] public EventCallback<string> OnRestart { get; set; }
    [Parameter] public EventCallback<string> OnRollback { get; set; }
    [Parameter] public EventCallback<string> OnDelete { get; set; }
    [Parameter] public EventCallback<string> OnResources { get; set; }

    private string GetImageShortName(string image)
    {
        if (string.IsNullOrEmpty(image)) return "N/A";
        var parts = image.Split('/');
        return parts.Length > 0 ? parts[^1] : image;
    }

    private string GetStatusBadgeClass(string status)
    {
        return status.ToLower() switch
        {
            "running" => "bg-green-100 text-green-800",
            "stopped" => "bg-gray-100 text-gray-800",
            "starting" => "bg-yellow-100 text-yellow-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }

    private string GetReplicaClass(SwarmServiceDto service)
    {
        if (service.Replicas == service.DesiredReplicas && service.Replicas > 0)
            return "text-green-600 font-medium";
        if (service.Replicas < service.DesiredReplicas)
            return "text-yellow-600 font-medium";
        return "text-gray-600";
    }
}
