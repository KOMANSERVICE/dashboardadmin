@using FrontendAdmin.Shared.Pages.Swarm.Models
@using System.ComponentModel.DataAnnotations
@inject ISwarmHttpService SwarmService

<div class="p-4">
    @if (isLoadingContainers)
    {
        <div class="flex justify-center items-center py-8">
            <i class="fas fa-spinner fa-spin text-2xl text-primary-700"></i>
        </div>
    }
    else
    {
        <EditForm Model="@model" OnValidSubmit="HandleSubmit">
            <DataAnnotationsValidator />

            <div class="space-y-4">
                <div class="bg-gray-50 rounded-md p-3 mb-4">
                    <p class="text-sm text-gray-600">
                        <i class="fas fa-network-wired text-primary-700 mr-2"></i>
                        Connecter un conteneur au reseau <strong>@NetworkName</strong>
                    </p>
                </div>

                <!-- Container Selection -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Conteneur *</label>
                    @if (!availableContainers.Any())
                    {
                        <div class="text-sm text-yellow-600 bg-yellow-50 p-3 rounded">
                            <i class="fas fa-exclamation-triangle mr-2"></i>
                            Aucun conteneur disponible
                        </div>
                    }
                    else
                    {
                        <select @bind="model.ContainerId"
                                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary-700 focus:border-transparent">
                            <option value="">-- Selectionnez un conteneur --</option>
                            @foreach (var container in availableContainers)
                            {
                                <option value="@container.Id">@container.Name (@TruncateId(container.Id))</option>
                            }
                        </select>
                        <ValidationMessage For="() => model.ContainerId" class="text-red-500 text-sm mt-1" />
                    }
                </div>

                <!-- Optional IP Address -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Adresse IP (optionnel)</label>
                    <InputText @bind-Value="model.IpAddress"
                               class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary-700 focus:border-transparent"
                               placeholder="172.20.0.10" />
                    <ValidationMessage For="() => model.IpAddress" class="text-red-500 text-sm mt-1" />
                    <p class="text-xs text-gray-500 mt-1">Laissez vide pour une attribution automatique</p>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="mt-4 p-3 bg-red-100 text-red-700 rounded-md text-sm">
                    <i class="fas fa-exclamation-triangle mr-2"></i>@errorMessage
                </div>
            }

            <div class="flex justify-end gap-2 mt-6">
                <Button type="button" @onclick="OnCancel" ButtonColor="ButtonColor.Light">
                    <span>Annuler</span>
                </Button>
                <Button type="submit" ButtonColor="ButtonColor.Primary"
                        Disabled="@(isSubmitting || !availableContainers.Any())">
                    @if (isSubmitting)
                    {
                        <span class="animate-spin mr-2"><i class="fas fa-spinner"></i></span>
                    }
                    <span>Connecter</span>
                </Button>
            </div>
        </EditForm>
    }
</div>

@code {
    [Parameter] public string NetworkName { get; set; } = "";
    [Parameter] public EventCallback OnContainerConnected { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private ConnectContainerModel model = new();
    private List<ContainerDto> availableContainers = new();
    private bool isLoadingContainers = true;
    private bool isSubmitting;
    private string? errorMessage;

    private class ConnectContainerModel
    {
        [Required(ErrorMessage = "Veuillez selectionner un conteneur")]
        public string ContainerId { get; set; } = "";

        [RegularExpression(@"^(\d{1,3}\.){3}\d{1,3}$", ErrorMessage = "Format IP invalide")]
        public string? IpAddress { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadContainers();
    }

    private async Task LoadContainers()
    {
        isLoadingContainers = true;
        StateHasChanged();

        try
        {
            var response = await SwarmService.GetContainersAsync(all: true);
            if (response.Success)
            {
                availableContainers = response.Data.Containers
                    .Where(c => c.State == "running")
                    .ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading containers: {ex.Message}");
            errorMessage = "Erreur lors du chargement des conteneurs";
        }
        finally
        {
            isLoadingContainers = false;
            StateHasChanged();
        }
    }

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = null;
        StateHasChanged();

        try
        {
            var request = new ConnectContainerRequest(
                ContainerId: model.ContainerId,
                IpAddress: string.IsNullOrWhiteSpace(model.IpAddress) ? null : model.IpAddress
            );

            var response = await SwarmService.ConnectContainerAsync(NetworkName, request);

            if (response.Success)
            {
                await OnContainerConnected.InvokeAsync();
            }
            else
            {
                errorMessage = "Erreur lors de la connexion du conteneur au reseau";
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private string TruncateId(string id)
    {
        if (string.IsNullOrEmpty(id)) return "N/A";
        return id.Length > 12 ? id[..12] : id;
    }
}
