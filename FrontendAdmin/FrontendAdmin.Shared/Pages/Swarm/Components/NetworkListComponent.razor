@using FrontendAdmin.Shared.Pages.Swarm.Models

<div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reseau</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Driver</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Scope</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Conteneurs</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cree le</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @if (!Networks.Any())
            {
                <tr>
                    <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                        <i class="fas fa-network-wired text-4xl mb-2"></i>
                        <p>Aucun reseau Docker</p>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var network in Networks)
                {
                    <tr class="hover:bg-gray-50 transition">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <i class="fas fa-network-wired text-primary-700 mr-3"></i>
                                <div>
                                    <div class="text-sm font-medium text-gray-900">@network.Name</div>
                                    <div class="text-sm text-gray-500 font-mono truncate max-w-xs" title="@network.Id">
                                        @TruncateId(network.Id)
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="@GetDriverBadgeClass(network.Driver) px-2 inline-flex text-xs leading-5 font-semibold rounded-full">
                                @network.Driver
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center gap-2">
                                <span class="text-sm text-gray-900">@network.Scope</span>
                                @if (network.IsInternal)
                                {
                                    <span class="bg-gray-100 text-gray-600 px-1.5 py-0.5 rounded text-xs">interne</span>
                                }
                                @if (network.IsAttachable)
                                {
                                    <span class="bg-blue-100 text-blue-600 px-1.5 py-0.5 rounded text-xs">attachable</span>
                                }
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="text-sm text-gray-900">@network.ContainerCount</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @network.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <div class="flex justify-end gap-2">
                                <button @onclick="() => OnViewDetails.InvokeAsync(network.Name)"
                                        class="text-gray-400 hover:text-primary-700 transition"
                                        title="Details">
                                    <i class="fas fa-info-circle"></i>
                                </button>
                                <button @onclick="() => OnConnect.InvokeAsync(network)"
                                        class="text-gray-400 hover:text-green-600 transition"
                                        title="Connecter un conteneur">
                                    <i class="fas fa-plug"></i>
                                </button>
                                @if (!IsSystemNetwork(network.Name))
                                {
                                    <button @onclick="() => OnDelete.InvokeAsync(network)"
                                            class="text-gray-400 hover:text-red-600 transition"
                                            title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
        @if (Networks.Any())
        {
            <tfoot class="bg-gray-100">
                <tr>
                    <td colspan="6" class="px-6 py-3">
                        <div class="flex items-center gap-4 text-sm flex-wrap">
                            <span class="font-medium text-gray-700">Total:</span>
                            <span class="bg-primary-100 text-primary-800 px-2 py-1 rounded">
                                @Networks.Count reseau(x)
                            </span>
                            <span class="bg-green-100 text-green-800 px-2 py-1 rounded">
                                @Networks.Sum(n => n.ContainerCount) conteneur(s) connecte(s)
                            </span>
                            <span class="bg-purple-100 text-purple-800 px-2 py-1 rounded">
                                @Networks.Count(n => n.Driver.ToLowerInvariant() == "overlay") overlay
                            </span>
                            <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded">
                                @Networks.Count(n => n.Driver.ToLowerInvariant() == "bridge") bridge
                            </span>
                            @if (Networks.Any(n => n.IsInternal))
                            {
                                <span class="bg-gray-200 text-gray-700 px-2 py-1 rounded">
                                    @Networks.Count(n => n.IsInternal) interne(s)
                                </span>
                            }
                        </div>
                    </td>
                </tr>
            </tfoot>
        }
    </table>
</div>

@code {
    [Parameter] public List<NetworkDto> Networks { get; set; } = new();
    [Parameter] public EventCallback OnRefresh { get; set; }
    [Parameter] public EventCallback<string> OnViewDetails { get; set; }
    [Parameter] public EventCallback<NetworkDto> OnConnect { get; set; }
    [Parameter] public EventCallback<NetworkDto> OnDelete { get; set; }

    private static readonly HashSet<string> SystemNetworks = new(StringComparer.OrdinalIgnoreCase)
    {
        "bridge", "host", "none", "ingress", "docker_gwbridge"
    };

    private bool IsSystemNetwork(string name)
    {
        return SystemNetworks.Contains(name);
    }

    private string GetDriverBadgeClass(string driver)
    {
        return driver.ToLowerInvariant() switch
        {
            "overlay" => "bg-purple-100 text-purple-800",
            "bridge" => "bg-blue-100 text-blue-800",
            "host" => "bg-green-100 text-green-800",
            "none" => "bg-gray-100 text-gray-800",
            "macvlan" => "bg-yellow-100 text-yellow-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }

    private string TruncateId(string id)
    {
        if (string.IsNullOrEmpty(id)) return "N/A";
        return id.Length > 12 ? id[..12] : id;
    }
}
