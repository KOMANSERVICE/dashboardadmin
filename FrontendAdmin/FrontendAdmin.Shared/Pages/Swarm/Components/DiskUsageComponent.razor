@using FrontendAdmin.Shared.Pages.Swarm.Models

<div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="bg-gray-50 px-6 py-3 border-b flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-800">
            <i class="fas fa-hdd mr-2"></i>Utilisation Disque
        </h3>
        @if (DiskUsage?.Summary != null)
        {
            <div class="flex items-center gap-2">
                <span class="text-sm text-gray-500">Recuperable:</span>
                <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-sm font-medium">
                    @FormatBytes(DiskUsage.Summary.ReclaimableSize)
                </span>
            </div>
        }
    </div>
    <div class="p-6">
        @if (DiskUsage == null)
        {
            <div class="flex items-center justify-center py-8 text-gray-500">
                <i class="fas fa-spinner fa-spin mr-2"></i>
                Chargement...
            </div>
        }
        else
        {
            <!-- Summary Cards -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                <div class="bg-blue-50 rounded-lg p-4 text-center">
                    <i class="fas fa-layer-group text-blue-600 text-2xl mb-2"></i>
                    <p class="text-2xl font-bold text-blue-700">@DiskUsage.Summary.TotalImages</p>
                    <p class="text-sm text-blue-600">Images</p>
                    <p class="text-xs text-blue-500 mt-1">@FormatBytes(DiskUsage.Summary.ImagesSize)</p>
                </div>
                <div class="bg-purple-50 rounded-lg p-4 text-center">
                    <i class="fas fa-cube text-purple-600 text-2xl mb-2"></i>
                    <p class="text-2xl font-bold text-purple-700">@DiskUsage.Summary.TotalContainers</p>
                    <p class="text-sm text-purple-600">Conteneurs</p>
                    <p class="text-xs text-purple-500 mt-1">@FormatBytes(DiskUsage.Summary.ContainersSize)</p>
                </div>
                <div class="bg-green-50 rounded-lg p-4 text-center">
                    <i class="fas fa-database text-green-600 text-2xl mb-2"></i>
                    <p class="text-2xl font-bold text-green-700">@DiskUsage.Summary.TotalVolumes</p>
                    <p class="text-sm text-green-600">Volumes</p>
                    <p class="text-xs text-green-500 mt-1">@FormatBytes(DiskUsage.Summary.VolumesSize)</p>
                </div>
                <div class="bg-orange-50 rounded-lg p-4 text-center">
                    <i class="fas fa-boxes text-orange-600 text-2xl mb-2"></i>
                    <p class="text-2xl font-bold text-orange-700">@DiskUsage.Summary.TotalBuildCache</p>
                    <p class="text-sm text-orange-600">Build Cache</p>
                    <p class="text-xs text-orange-500 mt-1">@FormatBytes(DiskUsage.Summary.BuildCacheSize)</p>
                </div>
            </div>

            <!-- Total Usage Bar -->
            <div class="mb-6">
                <div class="flex justify-between mb-2">
                    <span class="text-sm font-medium text-gray-700">Espace Total Utilise</span>
                    <span class="text-sm font-bold text-gray-900">@FormatBytes(DiskUsage.Summary.TotalSize)</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-4 overflow-hidden">
                    @{
                        var total = DiskUsage.Summary.TotalSize > 0 ? DiskUsage.Summary.TotalSize : 1;
                        var imagesPercent = (double)DiskUsage.Summary.ImagesSize / total * 100;
                        var containersPercent = (double)DiskUsage.Summary.ContainersSize / total * 100;
                        var volumesPercent = (double)DiskUsage.Summary.VolumesSize / total * 100;
                        var buildCachePercent = (double)DiskUsage.Summary.BuildCacheSize / total * 100;
                    }
                    <div class="h-full flex">
                        <div class="bg-blue-500 h-full" style="width: @imagesPercent.ToString("F1", System.Globalization.CultureInfo.InvariantCulture)%"></div>
                        <div class="bg-purple-500 h-full" style="width: @containersPercent.ToString("F1", System.Globalization.CultureInfo.InvariantCulture)%"></div>
                        <div class="bg-green-500 h-full" style="width: @volumesPercent.ToString("F1", System.Globalization.CultureInfo.InvariantCulture)%"></div>
                        <div class="bg-orange-500 h-full" style="width: @buildCachePercent.ToString("F1", System.Globalization.CultureInfo.InvariantCulture)%"></div>
                    </div>
                </div>
                <div class="flex gap-4 mt-2 text-xs">
                    <span class="flex items-center"><span class="w-3 h-3 bg-blue-500 rounded mr-1"></span>Images</span>
                    <span class="flex items-center"><span class="w-3 h-3 bg-purple-500 rounded mr-1"></span>Conteneurs</span>
                    <span class="flex items-center"><span class="w-3 h-3 bg-green-500 rounded mr-1"></span>Volumes</span>
                    <span class="flex items-center"><span class="w-3 h-3 bg-orange-500 rounded mr-1"></span>Build Cache</span>
                </div>
            </div>

            <!-- Detailed Tables -->
            <div class="space-y-6">
                <!-- Images Table -->
                @if (DiskUsage.Images.Any())
                {
                    <div>
                        <h4 class="text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-layer-group mr-1"></i>Images (@DiskUsage.Images.Count)
                        </h4>
                        <div class="overflow-x-auto max-h-48 overflow-y-auto">
                            <table class="min-w-full text-sm">
                                <thead class="bg-gray-50 sticky top-0">
                                    <tr>
                                        <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Repository</th>
                                        <th class="px-3 py-2 text-right text-xs font-medium text-gray-500">Taille</th>
                                        <th class="px-3 py-2 text-right text-xs font-medium text-gray-500">Conteneurs</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200">
                                    @foreach (var image in DiskUsage.Images.OrderByDescending(i => i.Size).Take(10))
                                    {
                                        <tr class="hover:bg-gray-50">
                                            <td class="px-3 py-2 font-mono text-xs truncate max-w-xs">
                                                @(image.RepoTags.FirstOrDefault() ?? image.Id[..12])
                                            </td>
                                            <td class="px-3 py-2 text-right">@FormatBytes(image.Size)</td>
                                            <td class="px-3 py-2 text-right">@image.Containers</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }

                <!-- Volumes Table -->
                @if (DiskUsage.Volumes.Any())
                {
                    <div>
                        <h4 class="text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-database mr-1"></i>Volumes (@DiskUsage.Volumes.Count)
                        </h4>
                        <div class="overflow-x-auto max-h-48 overflow-y-auto">
                            <table class="min-w-full text-sm">
                                <thead class="bg-gray-50 sticky top-0">
                                    <tr>
                                        <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Nom</th>
                                        <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Driver</th>
                                        <th class="px-3 py-2 text-right text-xs font-medium text-gray-500">Taille</th>
                                        <th class="px-3 py-2 text-right text-xs font-medium text-gray-500">Utilisations</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200">
                                    @foreach (var volume in DiskUsage.Volumes.OrderByDescending(v => v.Size).Take(10))
                                    {
                                        <tr class="hover:bg-gray-50">
                                            <td class="px-3 py-2 font-mono text-xs truncate max-w-xs">
                                                @(volume.Name.Length > 20 ? volume.Name[..20] + "..." : volume.Name)
                                            </td>
                                            <td class="px-3 py-2">@volume.Driver</td>
                                            <td class="px-3 py-2 text-right">@FormatBytes(volume.Size)</td>
                                            <td class="px-3 py-2 text-right">
                                                <span class="@(volume.UsageCount == 0 ? "text-red-600" : "text-gray-600")">
                                                    @volume.UsageCount
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public DiskUsageDto? DiskUsage { get; set; }

    private string FormatBytes(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        int order = 0;
        double size = bytes;
        while (size >= 1024 && order < sizes.Length - 1)
        {
            order++;
            size /= 1024;
        }
        return $"{size:0.##} {sizes[order]}";
    }
}
