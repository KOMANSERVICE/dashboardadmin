@using FrontendAdmin.Shared.Pages.Swarm.Models
@inject ISwarmHttpService SwarmService

<div class="p-4">
    <form @onsubmit="HandleSubmit" @onsubmit:preventDefault>
        <div class="space-y-4">
            <div class="p-3 bg-gray-100 rounded-md">
                <label class="text-xs text-gray-500">Image a pousser</label>
                <p class="text-sm font-medium text-gray-900">@SourceImage</p>
            </div>

            <div class="p-3 bg-yellow-50 border border-yellow-200 rounded-md">
                <p class="text-sm text-yellow-700">
                    <i class="fas fa-info-circle mr-2"></i>
                    Pour pousser vers un registry prive, assurez-vous que Docker est connecte au registry.
                </p>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Tag (optionnel)
                </label>
                <input type="text" @bind="tag"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500"
                       placeholder="Laisser vide pour pousser tous les tags" />
                <p class="text-xs text-gray-500 mt-1">
                    Specifie un tag particulier a pousser
                </p>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Registry (optionnel)
                </label>
                <input type="text" @bind="registry"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500"
                       placeholder="docker.io" />
                <p class="text-xs text-gray-500 mt-1">
                    Registry cible (Docker Hub par defaut)
                </p>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="p-3 bg-red-100 text-red-700 rounded-md text-sm">
                    <i class="fas fa-exclamation-circle mr-2"></i>
                    @errorMessage
                </div>
            }

            @if (isPushing)
            {
                <div class="p-3 bg-blue-100 text-blue-700 rounded-md text-sm">
                    <i class="fas fa-spinner fa-spin mr-2"></i>
                    Envoi de l'image en cours... Cela peut prendre plusieurs minutes.
                </div>
            }

            @if (pushSuccess)
            {
                <div class="p-3 bg-green-100 text-green-700 rounded-md text-sm">
                    <i class="fas fa-check-circle mr-2"></i>
                    Image envoyee avec succes!
                </div>
            }
        </div>

        <div class="flex justify-end gap-2 mt-6">
            <Button type="button" @onclick="HandleCancel"
                    ButtonColor="ButtonColor.Light"
                    Disabled="@isPushing">
                <span>@(pushSuccess ? "Fermer" : "Annuler")</span>
            </Button>
            @if (!pushSuccess)
            {
                <Button type="submit"
                        ButtonColor="ButtonColor.Primary"
                        Disabled="@isPushing">
                    @if (isPushing)
                    {
                        <span class="animate-spin mr-2">
                            <i class="fas fa-spinner"></i>
                        </span>
                    }
                    else
                    {
                        <i class="fas fa-upload mr-2"></i>
                    }
                    <span>Pousser</span>
                </Button>
            }
        </div>
    </form>
</div>

@code {
    [Parameter] public string ImageId { get; set; } = "";
    [Parameter] public string SourceImage { get; set; } = "";
    [Parameter] public EventCallback OnImagePushed { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private string tag = "";
    private string registry = "";
    private bool isPushing;
    private bool pushSuccess;
    private string? errorMessage;

    private async Task HandleSubmit()
    {
        isPushing = true;
        errorMessage = null;
        pushSuccess = false;
        StateHasChanged();

        try
        {
            var request = new PushImageRequest(
                Tag: string.IsNullOrWhiteSpace(tag) ? null : tag.Trim(),
                Registry: string.IsNullOrWhiteSpace(registry) ? null : registry.Trim()
            );

            var response = await SwarmService.PushImageAsync(ImageId, request);
            if (response.Success)
            {
                pushSuccess = true;
                await OnImagePushed.InvokeAsync();
            }
            else
            {
                errorMessage = response.Message ?? "Erreur lors de l'envoi de l'image";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur: {ex.Message}";
        }
        finally
        {
            isPushing = false;
            StateHasChanged();
        }
    }

    private async Task HandleCancel()
    {
        await OnCancel.InvokeAsync();
    }
}
