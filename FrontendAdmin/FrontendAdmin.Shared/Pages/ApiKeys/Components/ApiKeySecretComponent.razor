@using FrontendAdmin.Shared.Pages.ApiKeys.Models
@inject IJSRuntime JSRuntime

<div class="p-6">
    <div class="bg-green-50 border-l-4 border-green-400 p-4 mb-6">
        <div class="flex">
            <div class="flex-shrink-0">
                <i class="fas fa-check-circle text-green-400"></i>
            </div>
            <div class="ml-3">
                <p class="text-sm text-green-700">
                    Votre API Key a ete creee avec succes!
                </p>
            </div>
        </div>
    </div>

    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
        <div class="flex">
            <div class="flex-shrink-0">
                <i class="fas fa-exclamation-circle text-red-400"></i>
            </div>
            <div class="ml-3">
                <p class="text-sm text-red-700">
                    <strong>Attention!</strong> Cette cle ne sera plus jamais affichee.
                    Copiez-la maintenant et stockez-la en lieu sur (ex: gestionnaire de secrets, variable d'environnement).
                </p>
            </div>
        </div>
    </div>

    @if (ApiKey != null)
    {
        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Votre API Key</label>
                <div class="flex items-center space-x-2">
                    <div class="flex-1 relative">
                        <input type="text"
                               value="@ApiKey.ApiKey"
                               readonly
                               class="block w-full px-3 py-2 pr-10 border border-gray-300 rounded-md bg-gray-50 font-mono text-sm" />
                    </div>
                    <button type="button"
                            @onclick="CopyToClipboard"
                            class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                        <i class="fas @(copied ? "fa-check text-green-500" : "fa-copy") mr-2"></i>
                        @(copied ? "Copie!" : "Copier")
                    </button>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                    <span class="text-gray-500">Application:</span>
                    <span class="ml-2 font-medium">@ApiKey.ApplicationName</span>
                </div>
                <div>
                    <span class="text-gray-500">Creee le:</span>
                    <span class="ml-2 font-medium">@ApiKey.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                </div>
                <div>
                    <span class="text-gray-500">Expire le:</span>
                    <span class="ml-2 font-medium">@(ApiKey.ExpiresAt?.ToString("dd/MM/yyyy") ?? "Jamais")</span>
                </div>
                <div>
                    <span class="text-gray-500">Scopes:</span>
                    <span class="ml-2 font-medium">@ApiKey.Scopes.Length</span>
                </div>
            </div>

            <div>
                <span class="text-gray-500 text-sm">Permissions:</span>
                <div class="flex flex-wrap gap-1 mt-1">
                    @foreach (var scope in ApiKey.Scopes)
                    {
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                            @scope
                        </span>
                    }
                </div>
            </div>

            <div class="bg-gray-50 rounded-lg p-4 mt-4">
                <h4 class="text-sm font-medium text-gray-900 mb-2">Utilisation</h4>
                <p class="text-xs text-gray-600 mb-2">Ajoutez cette cle dans le header de vos requetes HTTP:</p>
                <code class="block bg-gray-800 text-green-400 p-3 rounded text-xs overflow-x-auto">
                    X-API-Key: @ApiKey.ApiKey
                </code>
            </div>
        </div>
    }
</div>

<div class="flex justify-end px-6 py-4 border-t">
    <Button aria-label="Fermer"
            type="button"
            @onclick="HandleClose">
        J'ai copie ma cle, fermer
    </Button>
</div>

@code {
    [Parameter]
    public ApiKeyCreatedResponse? ApiKey { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    private bool copied;

    private async Task CopyToClipboard()
    {
        if (ApiKey != null)
        {
            await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", ApiKey.ApiKey);
            copied = true;
            StateHasChanged();

            await Task.Delay(2000);
            copied = false;
            StateHasChanged();
        }
    }

    private void HandleClose()
    {
        OnClose.InvokeAsync();
    }
}
