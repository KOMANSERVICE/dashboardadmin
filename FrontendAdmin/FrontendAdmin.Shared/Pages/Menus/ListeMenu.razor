@page "/menu/{AppAdminReference}"
@using FrontendAdmin.Shared.Pages.Menus.Models
@using FrontendAdmin.Shared.Pages.Menus.Components
@inject IMenuHttpService _menuHttpService
@inject NavigationManager Nav
@inject ToastService ToastService

<PageTitleComponent Title="Gestion des menus" />

<HeaderPage
    Title="Gestion des menu"
    SubTitle="Creez, modifiez et reordonnez vos menus par glisser-deposer"/>

<div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="p-4 border-b border-gray-200">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 w-full">
            <div class="flex items-center">
                <label for="itemsPerPage" class="mr-2 text-sm text-gray-600">Afficher</label>
                <select id="itemsPerPage" class="border border-gray-300 rounded px-2 py-1 text-sm"
                        @bind="pageSize">
                    <option value="10">10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                </select>
                <span class="ml-2 text-sm text-gray-600">elements</span>
            </div>

            <div class="relative w-full md:w-64">
                <input type="text"
                       placeholder="Rechercher un menu..."
                       class="w-full border border-gray-300 rounded-md pl-10 pr-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary-700 focus:border-transparent"
                       @bind="searchTerm"
                       @bind:event="oninput" />
                <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
            </div>

            <div class="flex gap-3">
                <Button type="button" @onclick="Create" id="addMenuBtn"
                        IconCss="fas fa-plus" IconPlacement="ButtonIconPlacement.Left" ButtonText="">
                </Button>
                <Button type="button" @onclick="OpenPrintModal" id="printBtn"
                        IconPlacement="ButtonIconPlacement.Left" ButtonText="">
                    <Icon>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd"
                                  d="M5 4v3H4a2 2 0 00-2 2v3a2 2 0 002 2h1v2a2 2 0 002 2h6a2 2 0 002-2v-2h1a2 2 0 002-2V9a2 2 0 00-2-2h-1V4a2 2 0 00-2-2H7a2 2 0 00-2 2zm8 0H7v3h6V4zm0 8H7v4h6v-4z"
                                  clip-rule="evenodd" />
                        </svg>
                    </Icon>
                </Button>
            </div>
        </div>
    </div>

    <!-- Desktop Table View -->
    <div class="hidden md:block overflow-x-auto">
        <table id="menuTable" class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-12">
                        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                        </svg>
                    </th>
                    <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-12">
                        #
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reference</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Url Frontend</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Icone</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Groupe</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var menu in FilteredMenus)
                {
                    <tr data-reference="@menu.Reference"
                        class="@GetRowClass(menu)"
                        draggable="true"
                        @ondragstart="() => HandleDragStart(menu)"
                        @ondragover="HandleDragOver"
                        @ondragover:preventDefault
                        @ondrop="() => HandleDrop(menu)"
                        @ondragend="HandleDragEnd">
                        <td class="px-3 py-4 whitespace-nowrap cursor-grab active:cursor-grabbing">
                            <svg class="w-5 h-5 text-gray-400 hover:text-primary-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16"/>
                            </svg>
                        </td>
                        <td class="px-3 py-4 whitespace-nowrap">
                            <span class="inline-flex items-center justify-center w-6 h-6 text-xs font-semibold text-gray-600 bg-gray-100 rounded-full">
                                @(menu.SortOrder + 1)
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">@menu.Name</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@menu.Reference</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-primary-700 bg-opacity-10 text-primary-700">
                                @menu.UrlFront
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <i class="@menu.Icon"></i>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@(menu.Group ?? "-")</td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <button class="text-primary-700 hover:text-amber-800 mr-3"
                                    @onclick="() => ChangeStatusAsync(menu.Reference, menu.IsActif)"
                                    @onclick:stopPropagation="true">
                                @if (menu.IsActif)
                                {
                                    <svg class="w-6 h-6 text-primary-700 dark:text-white inline-block" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.933 13.909A4.357 4.357 0 0 1 3 12c0-1 4-6 9-6m7.6 3.8A5.068 5.068 0 0 1 21 12c0 1-3 6-9 6-.314 0-.62-.014-.918-.04M5 19 19 5m-4 7a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
                                    </svg>
                                }
                                else
                                {
                                    <svg class="w-6 h-6 text-primary-700 dark:text-white inline-block" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                        <path stroke="currentColor" stroke-width="2" d="M21 12c0 1.2-4.03 6-9 6s-9-4.8-9-6c0-1.2 4.03-6 9-6s9 4.8 9 6Z"/>
                                        <path stroke="currentColor" stroke-width="2" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
                                    </svg>
                                }
                            </button>
                            <button class="text-primary-700 hover:text-amber-800 mr-3"
                                    @onclick="() => Edit(menu)"
                                    @onclick:stopPropagation="true">
                                <svg class="w-6 h-6 text-primary-700 dark:text-white inline-block" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z"/>
                                </svg>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile Card View -->
    <div id="menuMobileContainer" class="md:hidden space-y-3 p-4">
        @foreach (var menu in FilteredMenus)
        {
            <div data-reference="@menu.Reference" class="bg-white rounded-lg shadow-md p-4 border border-gray-200">
                <div class="flex justify-between items-start mb-2">
                    <div class="flex items-center gap-2">
                        <div class="p-2 -ml-2 cursor-grab touch-none">
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16"/>
                            </svg>
                        </div>
                        <div>
                            <div class="flex items-center gap-2">
                                <span class="inline-flex items-center justify-center w-6 h-6 text-xs font-semibold text-gray-600 bg-gray-100 rounded-full">
                                    @(menu.SortOrder + 1)
                                </span>
                                <h3 class="font-medium text-gray-900">@menu.Name</h3>
                            </div>
                            <span class="text-xs px-2 py-1 rounded-full bg-primary-700 bg-opacity-10 text-primary-700">
                                @menu.UrlFront
                            </span>
                        </div>
                    </div>
                </div>
                <p class="text-sm text-gray-500 mb-3">@menu.Reference</p>
                <div class="flex justify-between items-center">
                    <button class="text-primary-700 hover:text-amber-800 mr-3"
                            @onclick="() => ChangeStatusAsync(menu.Reference, menu.IsActif)">
                        @if (menu.IsActif)
                        {
                            <svg class="w-6 h-6 text-primary-700 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.933 13.909A4.357 4.357 0 0 1 3 12c0-1 4-6 9-6m7.6 3.8A5.068 5.068 0 0 1 21 12c0 1-3 6-9 6-.314 0-.62-.014-.918-.04M5 19 19 5m-4 7a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
                            </svg>
                        }
                        else
                        {
                            <svg class="w-6 h-6 text-primary-700 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                <path stroke="currentColor" stroke-width="2" d="M21 12c0 1.2-4.03 6-9 6s-9-4.8-9-6c0-1.2 4.03-6 9-6s9 4.8 9 6Z"/>
                                <path stroke="currentColor" stroke-width="2" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
                            </svg>
                        }
                    </button>
                    <button class="text-primary-700 hover:text-amber-800"
                            @onclick="() => Edit(menu)">
                        <i class="fas fa-edit"></i>
                    </button>
                </div>
            </div>
        }
    </div>

    <!-- Footer -->
    <div class="p-4 border-t border-gray-200">
        <div class="flex flex-col md:flex-row justify-between items-center gap-3 w-full">
            <div class="text-sm text-gray-500">
                <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Glissez-deposez les lignes pour reordonner les menus
            </div>
            <div class="text-sm text-gray-600">
                Affichage de @PageStart a @PageEnd sur @TotalCount elements
            </div>
        </div>
    </div>
</div>

@if (isSaving)
{
    <div class="fixed inset-0 bg-black bg-opacity-30 flex items-center justify-center z-50">
        <div class="bg-white rounded-lg p-4 flex items-center gap-3">
            <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-primary-700"></div>
            <span>Sauvegarde en cours...</span>
        </div>
    </div>
}

<Modal
    ShowModal="@showModal"
    OnCloseModal="()=>{
           OnShowCreateModal();
    }"
    ModalTitle="@ModalCreateTitle"
>
    <CreateMenuComponent
        AppAdminReference="@AppAdminReference"
        Reference="@Reference"
        menu="@menu"
        OnAfterSave="async ()=>{
            await GetMenusAsync();
            OnShowCreateModal();
        }" />
</Modal>

@code {

    [Parameter]
    public string AppAdminReference { get; set; }

    private bool showModal = false;
    private bool isSaving = false;
    private Menu menu { get; set; } = new();
    private List<Menu> menus = new();
    private string Reference { get; set; } = default!;
    public string ModalCreateTitle { get; set; } = "Nouveau menu";

    // Drag and drop state
    private Menu? draggedMenu = null;

    protected override async Task OnInitializedAsync()
    {
        await GetMenusAsync();
    }

    private async Task GetMenusAsync()
    {
        var response = await _menuHttpService.GetMenuByApplicationAsync(AppAdminReference);
        menus = response.Data.Menus.OrderBy(m => m.SortOrder).ToList();
    }

    private string searchTerm = string.Empty;
    private int pageSize = 10;

    private IEnumerable<Menu> FilteredMenus => string.IsNullOrWhiteSpace(searchTerm)
        ? menus
        : menus.Where(m =>
            m.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
            m.Reference.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
            (m.Group?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false));

    private int PageStart => menus.Count > 0 ? 1 : 0;
    private int PageEnd => menus.Count;
    private int TotalCount => menus.Count;

    private string GetRowClass(Menu menu)
    {
        var baseClass = "hover:bg-gray-50 transition-colors";
        if (draggedMenu != null && draggedMenu.Reference == menu.Reference)
        {
            return baseClass + " opacity-50 bg-gray-100";
        }
        return baseClass;
    }

    private void OnShowCreateModal()
    {
        showModal = !showModal;
    }

    private void OpenPrintModal() { }

    private void Edit(Menu _menu)
    {
        ModalCreateTitle = "Modifier le menu";
        Reference = _menu.Reference;
        menu = _menu;
        OnShowCreateModal();
    }

    private void Create()
    {
        ModalCreateTitle = "Nouveau menu";
        Reference = string.Empty;
        menu = new Menu();
        OnShowCreateModal();
    }

    private async Task ChangeStatusAsync(string reference, bool status)
    {
        try
        {
            if (status)
            {
                await _menuHttpService.InactiveMenuAsync(new ActiveMenuRequest(reference, AppAdminReference));
            }
            else
            {
                await _menuHttpService.ActiveMenuAsync(new ActiveMenuRequest(reference, AppAdminReference));
            }
            ToastService.ShowToast("Succes", "Statut modifie avec succes", "success");
        }
        catch (Exception)
        {
            ToastService.ShowToast("Erreur", "Une erreur est survenue", "error");
        }

        await GetMenusAsync();
    }

    // Drag and Drop handlers
    private void HandleDragStart(Menu menu)
    {
        draggedMenu = menu;
    }

    private void HandleDragOver(DragEventArgs e)
    {
        // Allow drop
    }

    private async Task HandleDrop(Menu targetMenu)
    {
        if (draggedMenu == null || draggedMenu.Reference == targetMenu.Reference)
            return;

        var draggedIndex = menus.FindIndex(m => m.Reference == draggedMenu.Reference);
        var targetIndex = menus.FindIndex(m => m.Reference == targetMenu.Reference);

        if (draggedIndex < 0 || targetIndex < 0)
            return;

        // Remove dragged item and insert at target position
        menus.RemoveAt(draggedIndex);
        menus.Insert(targetIndex, draggedMenu);

        // Update sort orders
        for (int i = 0; i < menus.Count; i++)
        {
            menus[i].SortOrder = i;
        }

        // Save to server
        await SaveOrderAsync();

        draggedMenu = null;
        StateHasChanged();
    }

    private void HandleDragEnd()
    {
        draggedMenu = null;
        StateHasChanged();
    }

    private async Task SaveOrderAsync()
    {
        isSaving = true;
        StateHasChanged();

        try
        {
            var items = menus.Select(m => new MenuSortOrderItem(m.Reference, m.SortOrder)).ToList();
            var request = new ReorderMenusRequest(items);
            var result = await _menuHttpService.ReorderMenusAsync(AppAdminReference, request);

            if (result.Success)
            {
                ToastService.ShowToast("Succes", "Ordre des menus mis a jour", "success");
            }
            else
            {
                ToastService.ShowToast("Erreur", result.Message ?? "Erreur lors de la sauvegarde", "error");
                await GetMenusAsync(); // Reload to revert
            }
        }
        catch (Exception)
        {
            ToastService.ShowToast("Erreur", "Erreur lors de la sauvegarde de l'ordre", "error");
            await GetMenusAsync(); // Reload to revert
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }
}
